---
pagination:
  data: collections.transcriptions
  size: 1
  alias: transcription
permalink: "/transcriptions/{{ transcription.fields.slug }}/"
layout: base.njk
---

<div class="post">

  <div class="post-title">
  <h1>{{ transcription.fields.title }}</h1>

  <h2>By {{ transcription.fields.composer }}</h2>
  </div>

  <div class="sheet-gallery">
    {% for img in transcription.fields.sheetGallery %}
    <img src="https:{{ img.fields.file.url }}" alt="Sheet music image" />
  {% endfor %}

  </div>

  <div class="info-block">
  {{ transcription.fields.info | richtext | safe }}
  </div>


  {% if transcription.fields.analysisHtml %}
  <div class="analysis-block">
    {{ transcription.fields.analysisHtml | safe }}
    {% if transcription.fields.analysisImage %}
      <img src="https:{{ transcription.fields.analysisImage.fields.file.url }}" alt="Analysis image" />
    {% endif %}
  </div>
  {% endif %}



  </div>
</div>

